@page
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
   <meta charset="utf-8" />
   <meta name="viewport" content="width=device-width, initial-scale=1.0" />
   <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
   <link href='https://fonts.googleapis.com/css?family=Vibur:400' rel='stylesheet' type='text/css'>
   <link href='https://fonts.googleapis.com/css?family=Vibur:400' rel='stylesheet' type='text/css'>
   <link href="https://fonts.googleapis.com/css?family=Fira+Code" rel="stylesheet">
   <link href="https://fonts.googleapis.com/css?family=Source+Code+Pro" rel="stylesheet">
   <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
   <link href="https://fonts.googleapis.com/css?family=Exo+2" rel="stylesheet">
   <link href="https://fonts.googleapis.com/css?family=Montserrat:900i&display=swap" rel="stylesheet">
   <link href="https://fonts.googleapis.com/css?family=Righteous" rel="stylesheet">
   <style>
      :root {
         font-size: 10px;   
         --neon-text-color: #@(Request.Query["color"].ToString().Length > 0 ? Request.Query["color"].ToString() : "f40");
         --neon-border-color: #@(Request.Query["border"].ToString().Length > 0 ? Request.Query["border"].ToString() : "08f");
      }

      body {
         font-family: "@Request.Query["font"].ToString()", 'Exo 2', sans-serif;
         display: flex;
         justify-content: center;
         align-items: center;  
         background-color: #@Request.Query["bgcol"].ToString();
         background-image: url("/templates/bg_@Request.Query["bg"].ToString()\.png");
         min-height: 100vh;
      }

      h1 {
         font-size: @((145 - Request.Query["text"].ToString().Length *  10) * (Request.Query["fsm"].ToString().Length > 0 ? float.Parse(Request.Query["fsm"].ToString()) : 1))px; 
         font-weight: 200;
         font-style: italic;
         color: #fff;
         padding: 4rem 4rem 5rem;
         border: 0.4rem solid #fff;
         border-radius: 2rem;
         text-transform: uppercases;
         animation: flicker 1.5s infinite alternate;     
      }

      h1::-moz-selection {
         background-color: var(--neon-border-color);
         color: var(--neon-text-color);
      }

      h1::selection {
         background-color: var(--neon-border-color);
         color: var(--neon-text-color);
      }

      h1:focus {
         
      }

      @@keyframes flicker {
         0%, 19%, 21%, 23%, 25%, 54%, 56%, 100% {
            text-shadow:
               -0.2rem -0.2rem 1rem #fff,
               0.2rem 0.2rem 1rem #fff,
               0 0 2rem var(--neon-text-color),
               0 0 4rem var(--neon-text-color),
               0 0 6rem var(--neon-text-color),
               0 0 8rem var(--neon-text-color),
               0 0 10rem var(--neon-text-color);
            
            box-shadow:
               0 0 .5rem #fff,
               inset 0 0 .5rem #fff,
               0 0 2rem var(--neon-border-color),
               inset 0 0 2rem var(--neon-border-color),
               0 0 4rem var(--neon-border-color),
               inset 0 0 4rem var(--neon-border-color);        
         }
      }
   </style>
</head>
<body>

<h1>@Request.Query["text"].ToString()</h1>

</body>
</html>